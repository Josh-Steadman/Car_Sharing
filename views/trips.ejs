  <script>
    $('.regular').hide(); $('.one-off').hide();

    let myRadio = $('input[name="regular"]')
    

    myRadio.click(function() {
        if($(this).is(':checked')){
            if($(this).val() == "Y"){
                $('.one-off').hide();
                $('.regular').show(); 
            } else {
                $('.regular').hide();
                $('.one-off').show();
            }
        }
    })

    $('.add-date').datepicker({
      numberOfMonths: 1,
      showAnim: "fadeIn",
      dateFormat: "D d M, yy"
    })

    $('.edt-date').datepicker({
      numberOfMonths: 1,
      showAnim: "fadeIn",
      dateFormat: "D d M, yy"
    })
   
    $('.btn-edit').click((event) => {
        
        let info = event.target.parentElement
        let id = info.firstElementChild.innerHTML
        console.log(id);
        $('#tripid').val(id);
    })
    
    

  
